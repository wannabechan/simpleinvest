{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "",
  "functions": {
    "api/**/*.js": {
      "includeFiles": "node_modules/**"
    }
  },
  "crons": [
    {
      "path": "/api/cron/log-prices",
      "schedule": "30,40,50 0 * * 1-5"
    },
    {
      "path": "/api/cron/log-prices",
      "schedule": "0 1 * * 1-5"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}
